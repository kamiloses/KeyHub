@model KeyHub.Market.Models.RegisterViewModel
@{
    Layout = "_HomeLayout";
}

<div class="register-page">
    <div class="register-box shadow-lg rounded p-4 bg-white">
        <h2 class="register-title text-center mb-4">Create a KeyHub Account</h2>
        
        <form asp-action="Register" asp-controller="Auth" method="post" class="register-form">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Username"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 p-2">Register</button>
        </form>

        <div class="register-footer text-center mt-3">
            <span>Already have an account?</span>
            <a href="/auth/login">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}