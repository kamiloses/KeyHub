@model KeyHub.Market.Models.RegisterViewModel
@{
    Layout = "_HomeLayout";
}

<div class="signup-container">
    <div class="signup-card shadow-lg rounded p-4 bg-white">
        <h2 class="signup-title text-center mb-4">Create a KeyHub Account</h2>
        
        <form asp-action="Register" asp-controller="Auth" method="post" class="signup-form">

            <div class="input-group mb-3">
                <input asp-for="UserName" class="input-field" placeholder="Username"/>
                <span asp-validation-for="UserName" class="error-text"></span>
            </div>

            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="input-field" placeholder="Email"/>
                <span asp-validation-for="Email" class="error-text"></span>
            </div>

            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="input-field" placeholder="Password"/>
                <span asp-validation-for="Password" class="error-text"></span>
            </div>

            <div class="input-group mb-3">
                <input asp-for="ConfirmPassword" type="password" class="input-field" placeholder="Confirm Password"/>
                <span asp-validation-for="ConfirmPassword" class="error-text"></span>
            </div>

            <button type="submit" class="signup-button">Register</button>
        </form>

        <div class="signup-footer text-center mt-3">
            <span>Already have an account?</span>
            <a asp-controller="Auth" asp-action="Login" class="link-text">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}