@model KeyHub.Market.Models.ViewModels.LoginViewModel

@{
    Layout = "_HomeLayout";
}

<div class="login-container">
    <div class="login-card shadow-lg rounded p-4 bg-white">
        <h2 class="login-title mb-4">Login to KeyHub</h2>

        <form asp-action="Login" asp-controller="Auth" method="post">

            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="input-field" placeholder="Email"/>
                <span asp-validation-for="Email" class="error-text"></span>
            </div>

            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="input-field" placeholder="Password"/>
                <span asp-validation-for="Password" class="error-text"></span>
            </div>

            <div class="flex-row justify-between align-center mb-3">
                <div class="checkbox-wrapper">
                    <input asp-for="RememberMe" class="checkbox-input"/>
                    <label asp-for="RememberMe" class="checkbox-label">Remember me</label>
                </div>
            </div>

            <button type="submit" class="login-button">Login</button>

            <p class="register-text text-center">
                Don't have an account?
                <a asp-controller="Auth" asp-action="Register">Register</a>
            </p>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}