<div class="game-modal" id="gameModal">
    <div class="modal-box">
        <span class="modal-close" onclick="closeModal()">&times;</span>
        <h2 class="modal-title">Add New Game</h2>
        <form method="post" asp-controller="GameManager" asp-action="AddGame" enctype="multipart/form-data">
            <div class="form-field">
                <label for="gameTitle">Title</label>
                <input type="text" id="gameTitle" name="title" placeholder="Game title" required>
            </div>

            <div class="form-field">
                <label for="gameGenre">Genre</label>
                <select id="gameGenre" name="genre" required>
                    @foreach (Genre genre in Enum.GetValues(typeof(Genre)))
                    {
                        <option value="@genre">@genre</option>
                    }
                </select>
            </div>

            <div class="form-field">
                <label for="gamePrice">Price (PLN)</label>
                <input type="number" id="gamePrice" name="price" step="0.01" min="0.20" placeholder="0.00" required>
            </div>

            <div class="form-field">
                <label for="gameDiscount">Discount (%)</label>
                <input type="number" id="gameDiscount" name="discount" min="0" max="100" placeholder="0">
            </div>

            <div class="form-field">
                <label for="gamePlatform">Platform</label>
                <select id="gamePlatform" name="platform" required>
                    @foreach (Platform platform in Enum.GetValues(typeof(Platform)))
                    {
                        <option value="@platform">@platform</option>
                    }
                </select>
            </div>

            <div class="form-field">
                <label for="gameStock">Stock</label>
                <input type="number" id="gameStock" name="stock" min="1" placeholder="1" required>
            </div>

            <div class="form-field">
                <label for="gameImage">Game Image</label>
                <input type="file" id="gameImage" name="imageFile" accept="image/*" required>
            </div>

            <button type="submit" class="btn-submit-game">Add Game</button>
        </form>
    </div>
</div>
