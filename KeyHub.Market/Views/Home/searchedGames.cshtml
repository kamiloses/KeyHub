@model IEnumerable<KeyHub.Market.Models.Game>

@{
    Layout = "_HomeLayout";
}

<div class="search-page-container">

    <!-- Filtry po lewej -->
    <aside class="filters">
        <h3>Filters</h3>

        <div class="filter-group">
            <label>Price (PLN)</label>
            <div class="price-filter">
                <input type="number" placeholder="From">
                <span>-</span>
                <input type="number" placeholder="To">
            </div>
        </div>

        <div class="filter-group">
            <label>Platform</label>
            <ul>
                @foreach (var platform in Enum.GetValues(typeof(KeyHub.Market.Models.Platform)))
                {
                    <li>
                        <label>
                            <input type="checkbox" class="filter-checkbox"> @platform
                            <span>(0)</span> <!-- Możesz dynamicznie policzyć -->
                        </label>
                    </li>
                }
            </ul>
        </div>

        <div class="filter-group">
            <label>Genre</label>
            <ul>
                @* Możesz wypisać unikalne gatunki z bazy *@
                @foreach (var genre in Model.Select(g => g.Genre).Distinct())
                {
                    <li>
                        <label>
                            <input type="checkbox" class="filter-checkbox"> @genre
                        </label>
                    </li>
                }
            </ul>
        </div>
    </aside>

    <!-- Wyniki po prawej -->
    <main class="results-section">
        <div class="results-header">
            <h2>Search Results</h2>
            <select class="sort-options">
                <option value="popularity">Sort by Popularity</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
                <option value="name-asc">Name: A-Z</option>
                <option value="name-desc">Name: Z-A</option>
            </select>
        </div>

        <div class="game-list">
            @foreach (var game in Model) // wyświetl tylko 20 gier
            {
                <div class="game-item">
                    <h3>@game.Title</h3>
                    <p><strong>Platform:</strong> @game.Platform</p>
                    <p><strong>Genre:</strong> @game.Genre</p>
                    <p><strong>Region:</strong> GLOBAL</p>
                    <p><strong>Can be activated in:</strong> Poland</p>
                    @if (game.Discount > 0)
                    {
                        <p class="sponsor">SPONSORED</p>
                    }
                    <p class="price">
                        <span class="final-price">@String.Format("{0:C}", game.Price * (1 - (game.Discount ?? 0)/100m))</span>
                        <span class="old-price">@String.Format("{0:C}", game.Price)</span>
                        <span class="discount">-@game.Discount%</span>
                    </p>
                </div>
            }
        </div>
    </main>
    
</div>


<div class="pagination">
    @if (ViewBag.TotalPages > 1)
    {
        for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <span class="current-page">@i</span>
            }
            else
            {
                <a href="@Url.Action("SearchGame", new { page = i })">@i</a>
            }
        }
    }
</div>
<script>
    document.querySelectorAll('.filter-checkbox').forEach(cb => {
        cb.addEventListener('change', () => {
            // Na razie tylko symulacja odświeżenia
            alert('Filters updated!');
            // Tutaj później możesz wywołać np. Ajax lub pobrać wyniki z backendu
        });
    });
</script>
