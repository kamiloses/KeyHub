@model IEnumerable<KeyHub.Market.Models.Game>

@{
    Layout = "_HomeLayout";
}

<div class="search-page-container">

    <!-- Filtry po lewej -->
    <aside class="filters">
        <h3>Filters</h3>

        <div class="filter-group">
            <label>Price (PLN)</label>
            <div class="price-filter">
                <input type="number" placeholder="From">
                <span>-</span>
                <input type="number" placeholder="To">
            </div>
        </div>

        <div class="filter-group">
            <label>Platform</label>
            <ul>
                @foreach (var platform in Enum.GetValues(typeof(KeyHub.Market.Models.Platform)))
                {
                    <li>
                        <label>
                            <input type="checkbox" class="filter-checkbox"> @platform
                            <span>(0)</span> <!-- Możesz dynamicznie policzyć -->
                        </label>
                    </li>
                }
            </ul>
        </div>

        <div class="filter-group">
            <label>Genre</label>
            <ul>
                @* Możesz wypisać unikalne gatunki z bazy *@
                @foreach (var genre in Model.Select(g => g.Genre).Distinct())
                {
                    <li>
                        <label>
                            <input type="checkbox" class="filter-checkbox"> @genre
                        </label>
                    </li>
                }
            </ul>
        </div>
    </aside>

    <!-- Wyniki po prawej -->
    <main class="results-section">
        <div class="results-header">
            <h2>Search Results</h2>
            <select class="sort-options">
                <option value="popularity">Sort by Popularity</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
                <option value="name-asc">Name: A-Z</option>
                <option value="name-desc">Name: Z-A</option>
            </select>
        </div>

        <div class="game-list">
            @foreach (var game in Model.Take(20)) // wyświetl tylko 20 gier
            {
                <div class="game-item">
                    <h3>@game.Title</h3>
                    <p><strong>Platform:</strong> @game.Platform</p>
                    <p><strong>Genre:</strong> @game.Genre</p>
                    <p><strong>Region:</strong> GLOBAL</p>
                    <p><strong>Can be activated in:</strong> Poland</p>
                    @if (game.Discount > 0)
                    {
                        <p class="sponsor">SPONSORED</p>
                    }
                    <p class="price">
                        <span class="final-price">@String.Format("{0:C}", game.Price * (1 - (game.Discount ?? 0)/100m))</span>
                        <span class="old-price">@String.Format("{0:C}", game.Price)</span>
                        <span class="discount">-@game.Discount%</span>
                    </p>
                </div>
            }
        </div>
    </main>
</div>

<style>
    .search-page-container {
        display: flex;
        gap: 20px;
        margin: 20px;
        font-family: Arial, sans-serif;
    }

    /* Filtry po lewej */
    .filters {
        width: 220px;
        padding: 15px;
        background-color: #f7f7f7;
        border-radius: 8px;
    }

    .filters h3 {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .filter-group {
        margin-bottom: 20px;
    }

    .filter-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 6px;
    }

    .filter-group ul {
        list-style: none;
        padding-left: 0;
    }

    .filter-group ul li {
        padding: 4px 0;
        font-size: 14px;
    }

    .filter-group ul li label {
        cursor: pointer;
        display: flex;
        justify-content: space-between;
    }

    /* Wyniki po prawej */
    .results-section {
        flex: 1;
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .sort-options {
        padding: 4px 8px;
        font-size: 14px;
    }

    /* Lista gier */
    .game-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .game-item {
        padding: 12px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .game-item:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }

    .game-item h3 {
        font-size: 17px;
        margin-bottom: 6px;
        font-weight: bold;
    }

    .game-item p {
        margin: 2px 0;
        font-size: 14px;
        color: #333;
    }

    .game-item .sponsor {
        font-weight: bold;
        color: #e53935;
    }

    .game-item .price {
        margin-top: 4px;
    }

    .game-item .price .old-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 5px;
    }

    .game-item .price .discount {   
        color: #e53935;
        font-weight: bold;
    }

    .game-item .price .final-price {
        font-weight: bold;
        color: #000;
    }
</style>

<script>
    document.querySelectorAll('.filter-checkbox').forEach(cb => {
        cb.addEventListener('change', () => {
            // Na razie tylko symulacja odświeżenia
            alert('Filters updated!');
            // Tutaj później możesz wywołać np. Ajax lub pobrać wyniki z backendu
        });
    });
</script>
